<div class="absolute flex items-center justify-center w-screen h-screen bg-gray-700/90" id="login_box">
  <div class="flex flex-wrap justify-center p-2 bg-white rounded">
    <h3 class="w-full my-1 text-center text-xl">Ingresa tu nombre</h3>
    <input type="text" class="w-10/12 p-1 my-1 border-2 rounded outline-none" id="input_name" />
    <button class="w-10/12 m-1 px-5 py-2 my-1 bg-cyan-100 rounded" id="button_enter">Entrar</button>
  </div>
</div>
<div class="min-h-screen w-11/12 mx-auto bg-gray-300">
  <h1 class="w-full py-3 text-3xl text-center">Comunnity Chat</h1>
  <div class="flex flex-wrap">
    <div class="w-3/12 p-1 bg-gray-500">
      <h3 class="p-1 text-center font-bold text-lg">Integrantes</h3>
      <div class="px-1" id="users_in_chat">
      </div>
    </div>
    <div class="w-9/12 p-1 bg-gray-400">
      <h3 class="p-1 text-center font-bold text-lg">Chat</h3>
      <div>
        <div class="h-96 overflow-y-scroll" id="conversation_box">
        </div>
        <div class="flex w-full p-1 mt-1 bg-white rounded">
          <input type="text" id="msg_box" class="w-full outline-none" />
          <button class="p-1" id="button_sendmsg">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send-fill" viewBox="0 0 16 16">
